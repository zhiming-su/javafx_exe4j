<?xml version="1.0" encoding="UTF-8"?>

<?import com.zz.zfb.mod.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
         prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.zz.zfb.controller.MainController"
         xmlns="http://javafx.com/javafx/8">
    <tabs>
        <Tab text="单笔转账">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <GridPane alignment="TOP_RIGHT" layoutX="30.0" layoutY="43.0" prefHeight="221.0"
                                  prefWidth="335.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="247.0" minWidth="10.0" prefWidth="82.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="406.0" minWidth="10.0"
                                                   prefWidth="104.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="转账金额：" GridPane.halignment="RIGHT"/>
                                <TextField fx:id="transAmount" prefHeight="22.0" prefWidth="113.0"
                                           GridPane.columnIndex="1">
                                    <GridPane.margin>
                                        <Insets left="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="收款人账号：" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
                                <TextField fx:id="identity" prefHeight="22.0" prefWidth="113.0" GridPane.columnIndex="1"
                                           GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets left="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="收款人姓名：" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
                                <TextField fx:id="name" prefHeight="22.0" prefWidth="113.0" GridPane.columnIndex="1"
                                           GridPane.rowIndex="2">
                                    <GridPane.margin>
                                        <Insets left="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="转账业务标题：" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
                                <Label text="转账业务备注：" GridPane.halignment="RIGHT" GridPane.rowIndex="4"/>
                                <TextField fx:id="orderTitle" prefHeight="22.0" prefWidth="113.0"
                                           GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <GridPane.margin>
                                        <Insets left="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <TextField fx:id="remark" prefHeight="15.0" prefWidth="164.0" GridPane.columnIndex="1"
                                           GridPane.rowIndex="4">
                                    <GridPane.margin>
                                        <Insets left="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Button mnemonicParsing="false" onAction="#transfer" text="转账"
                                        GridPane.halignment="RIGHT" GridPane.rowIndex="5"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="批量转账">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="uploadBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
                                onAction="#uploadBtn" text="上传文件"/>
                        <!--<Button fx:id="downBtn"  layoutX="105.0" layoutY="13.0" mnemonicParsing="false"
                                onAction="#downBtn" text="下载模板"/>-->
                        <TableView fx:id="mytableView" layoutY="65.0" prefHeight="300.0" prefWidth="527.0"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="73.0"
                                   AnchorPane.topAnchor="65.0">
                            <columns>
                                <TableColumn fx:id="identityT" prefWidth="75.0" text="支付宝账号"/>
                                <TableColumn fx:id="nameT" prefWidth="74.0" text="姓名"/>
                                <TableColumn fx:id="transAmountT" prefWidth="75.0" text="金额"/>
                                <TableColumn fx:id="orderTitleT" prefWidth="75.0" text="转账标题"/>
                                <TableColumn fx:id="remarkT" prefWidth="122.0" text="转账备注"/>
                                <TableColumn fx:id="status" prefWidth="74.0" text="转账状态"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>

                        </TableView>
                        <Button fx:id="transBtn" layoutX="188.0" layoutY="13.0" mnemonicParsing="false"
                                onAction="#transBtn" text="开始转账"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
